<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.creator), feed_item.creator %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item.creator.name, feed_item.creator %>
    </span>
    <span class="content"><%= feed_item.content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  </td>
  <% if current_user == feed_item.user || current_user == feed_item.creator%>
      <td>
        <%= link_to "delete", user_micropost_path(feed_item.user_id, feed_item.id), :method => :delete,
                    :confirm => "You sure?",
                    :title => feed_item.content %>

      </td>
  <% end %>
</tr>